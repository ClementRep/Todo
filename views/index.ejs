<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>;
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three/examples/js/loaders/GLTFLoader.js"></script>
    <style>

        body{
            background-size: cover;
            background: linear-gradient(to right, rgba(255, 95, 95, 0.7), rgba(123, 145, 254, 0.99));
            z-index: 1;
            margin: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(235, 49, 2, 0.836);
        }

        h1 {
            text-align: center;
            font-family: "Britannic Bold";}

        input[type="text"] {
            width: 80%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="email"] {
            width: 50%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            background-color: #3498db;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            margin: 5px;
            border-radius: 4px;
        }

        button[type="submit"]:hover {
            background-color: #d1896b;
        }

        ul {
            padding: 0;
            list-style-type: none;
        }

        ul li {
            cursor: pointer;
            position: relative;
            padding: 11px 25px 8px 60px;
            background: #eee;
            font-size: 18px;
            transition: 0.2s;
            list-style-type: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        ul li:nth-child(odd) {
            background: #f9f9f9;
        }

        .delete-btn {
            position: absolute;
            right: 10px;
            top: 10px;
            background: red;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
            border-radius: 4px;
        }

        .delete-btn:hover {
            background: darkred;
        }


        .tooltip {
            position: relative;
            display: inline-block;
        }
        .tooltip .tooltiptext {
            visibility: hidden;
            width: 160px;
            background-color: #bd8f7e;
            color: #fff;
            text-align: center;
            border-radius: 5px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            bottom: 125%;  /* Position above the text */
            left: 50%;
            margin-left: -80px;  /* Center the tooltip */
            opacity: 0;
            transition: opacity 0.3s;
        }
        .tooltip:hover .tooltiptext {
            visibility: visible;
            opacity: .9;
        }

    </style>
</head>
<body>
    <h1>To-do List</h1>

    <div class="container">
        <ul id="List">
            <% tasks.forEach((task, index) => { %>
                <li>
                    <div class="tooltip">
                    <p><%= task.description %> - <%= task.time %></p>
                        <span class="tooltiptext">Click The Task to Cancel Out completed Task</span>
                    </div>
                    <form action="/remove" method="post">
                        <input type="hidden" name="task" value="<%= task.description %>"> 
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <form action="/add" method="post">
            <input type="text" id="txtInput" name="task"  placeholder="Add a new task" required pattern=".*\S.*">
            <br>
           <br> <input type="datetime-local" id="taskTime" name="time" required> &nbsp; &nbsp;
            <input type="email"  id="email" name="mail"  placeholder="enter your email">(optional) &nbsp;
            <button type="submit">Add Task</button>
        </form>
    </div>

    <script>
    const tasks=document.querySelectorAll("#List li .tooltip");

    tasks.forEach((task)=>{
        task.addEventListener("click", function() {
  if (task.style.textDecoration === "line-through") {
    task.style.textDecoration = "none"; 
  } else if(task.style.textDecoration ="line-through") {
        task.style.textDecorationthickness="5px";
  }
});
});
    </script>
</body>
</html>
